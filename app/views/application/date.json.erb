{
  "year" : <%= @year %>,
  "week" : <%= @week %>,
  "workers":[
    <%= Worker.all.collect { |worker|
      %{  
      { "id":"#{worker.id}",
        "name":"#{worker.name}",
        "availability":#{worker.get_available_days(@year, @week)}
      } }
    }.join(',').html_safe %>
  ],
  "projects":[
    <%= Project.all.collect { |project|
      %{  
      { "id":"#{project.id}",
        "name":"#{project.name}",
        "workload":#{project.get_work_days(@year, @week)}
      } }
    }.join(',').html_safe %>
  ],
  "assignments":{
    <%= 
      Worker.all.collect { |worker|
        "\"#{worker.id}\": {" + 
          Project.all.collect { |project|
            "\"#{project.id}\": #{@assignment_days[worker][project]}" 
          }.join(',').html_safe +
        "}"
      }.join(',').html_safe
    %>
  }
}
