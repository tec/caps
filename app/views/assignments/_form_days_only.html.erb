<%= form_for(assignment, :remote => true) do |f| %>
  <%= f.select :days_per_week, Week::DAYS_PER_WEEK, {}, {:class => 'submittable'} %>
  <%= f.hidden_field :from_year %>
  <%= f.hidden_field :from_week %>
  <%= f.hidden_field :worker_id %>
  <%= f.hidden_field :project_id %>
  <%= f.submit :submit, {:class => 'assignment_button'} %>
<% end %>
